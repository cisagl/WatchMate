<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎬 WatchMate"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnBrowseContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👁️ Browse Contents"
            android:textAllCaps="false"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:elevation="6dp" />

        <LinearLayout
            android:id="@+id/layoutBrowseOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnWatchLater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Watch Later"
                android:textAllCaps="false"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnRatedList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📈 Rated Contents"
                android:textAllCaps="false"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:padding="12dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAddContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="➕ Add New Content"
            android:textAllCaps="false"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:elevation="6dp" />

        <LinearLayout
            android:id="@+id/layoutAddOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/btnSaveContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📌 Add to Watch Later"
                android:textAllCaps="false"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnRateContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⭐ Add Rated Content"
                android:textAllCaps="false"
                android:backgroundTint="#E0E0E0"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
